[Unit]
Description=Gunicorn Daemon for erasebg (dev)
After=network.target

[Service]
User=vikas
Group=www-data
Environment="DJANGO_ENV=development"
WorkingDirectory=/opt/erasebg/erasebg-backend/dev
ExecStart=/opt/erasebg/erasebg-backend/dev/.venv/bin/gunicorn \
          --access-logfile /var/log/gunicorn/erasebg-dev-access.log \
          --error-logfile /var/log/gunicorn/erasebg-dev-error.log \
          --workers 1 \
          --threads 2 \
          --timeout 60 \
          --bind unix:/opt/erasebg/erasebg-backend/dev/gunicorn.sock \
          erasebg.wsgi:application

Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
